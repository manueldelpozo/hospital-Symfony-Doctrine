{% extends '::hospitalBackend.html.twig' %}

{% block contenido %}
    <h1>Medico</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Numcolegiado</th>
                <td>{{ entity.numColegiado }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('medico') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('medico_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
